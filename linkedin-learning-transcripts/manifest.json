{
  "manifest_version": 3,
  "name": "LinkedIn Learning Transcript Downloader",
  "version": "1.1",
  "description": "Download comprehensive transcripts from LinkedIn Learning courses",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "scripting",
    "tabs"
  ],
  "optional_permissions": [
    "downloads.shelf"
  ],
  "host_permissions": [
    "*://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Download Course Transcripts"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/learning/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["*://www.linkedin.com/*"]
    }
  ]
}