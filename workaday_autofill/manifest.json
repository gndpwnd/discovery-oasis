{
  "manifest_version": 3,
  "name": "Workday AutoFill Extension",
  "version": "1.0.0",
  "description": "Automatically fills Workday job application forms",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.myworkdayjobs.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.myworkdayjobs.com/*"],
      "js": [
        "utils/logger.js",
        "utils/storage.js",
        "detectors/formDetector.js",
        "fillers/textFiller.js",
        "fillers/dropdownFiller.js",
        "fillers/checkboxFiller.js",
        "fillers/radioFiller.js",
        "fillers/dateFiller.js",
        "fillers/multiselectFiller.js",
        "main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "data/*.json"
      ],
      "matches": ["https://*.myworkdayjobs.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Workday AutoFill"
  }
}